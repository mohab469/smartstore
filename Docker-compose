version: '3.8'

services:
  backend:
    build: ./backend
    container_name: smartstore-backend
    restart: unless-stopped
    ports:
      - "5000:5000"
    environment:
      - NODE_ENV=production
      - DB_PATH=/data/smartstore.db
      - JWT_SECRET=${JWT_SECRET}
      - PORT=5000
    volumes:
      - ./data:/data
      - ./uploads:/app/uploads
    networks:
      - smartstore-network

  frontend:
    build: ./frontend
    container_name: smartstore-frontend
    restart: unless-stopped
    ports:
      - "3000:3000"
    depends_on:
      - backend
    networks:
      - smartstore-network

  nginx:
    image: nginx:alpine
    container_name: smartstore-nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./ssl:/etc/nginx/ssl
    depends_on:
      - backend
      - frontend
    networks:
      - smartstore-network

networks:
  smartstore-network:
    driver: bridge

volumes:
  database-data:
  uploads-data: